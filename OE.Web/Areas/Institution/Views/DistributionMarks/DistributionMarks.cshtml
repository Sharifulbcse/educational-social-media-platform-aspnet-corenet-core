
@model OE.Web.Areas.Institution.Models.IndexDistributionMarksVM

<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>
<h1 class="page-title">Marks Distribution </h1>
<br />
<div class="row">
    <div class="col-12 col-sm-6 col-md-6">
        <button class="btn btn-success btn-sm " id="btnAddDistributionMark" name="btnAddDistributionMark" data-toggle="modal" data-target="#mdlAddDistributionMark">
            <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
            New
        </button>
        <label>
            <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Tip: Distribution Mark" data-content="Distribution marks means the percentages of marks type.">
                <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
            </a>
        </label>
    </div>
    <div class="col-12 col-sm-6 col-md-3 pull-right">
        <form id="filterSearch" asp-area="Institution" asp-controller="DistributionMarks" asp-action="DistributionMarks" asp-route-classId="classId" method="get">
            <select class="form-control" id="classId" name="classId" asp-items="@(new SelectList(ViewBag.ddlClasses, "Id","Name", Model.SelectedClassId))" onchange="this.form.submit();">
                <option value="0">All Classes</option>
            </select>
        </form>
    </div>
</div>

<h4 class="text-danger">@ViewBag.msg</h4>

<br />
<br />

@if (Model.distributionMarks.Count() == 0)
{
    <div class="well"><b>No Record has been added yet.</b></div>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> Class </th>
                <th> Subject </th>
                <th> Mark Type</th>
                <th> Mark %</th>
                <th> Start Date </th>
                <th> End Date </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model.distributionMarks)
            {
                <tr>

                    <td class="showDetails pointer">@data.ClassName</td>
                    <td class="showDetails pointer">@data.SubjectName</td>
                    <td class="showDetails pointer">@data.MarkTypeName</td>

                    <td class="showDetails pointer">@data.BreakDownInP</td>

                    <td class="showDetails pointer">
                       
                    </td>
                    <td class="showDetails pointer">
                        
                    </td>

                    <td>

                        
                        <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-subjectid="@data.SubjectId" data-marktypeid="@data.MarkTypeId" data-max="@data.BreakDownInP" data-classid="@data.ClassId">
                            <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                            Edit
                        </button>
                        

                        <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                            <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <h3 style="color:red">@ViewBag.err</h3>
}
<!-- #region "All Modals" -->
<div id="mdlAddDistributionMark" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Mark Distribution</h3>
            </div>
            <div class="modal-body">

                <form enctype="multipart/form-data" id="addDistributionMark">
                    <label>Class:</label>
                    <select class="form-control" id="ddlAddClassId" name="DistributionMark.ClassId" asp-items="@(new SelectList(ViewBag.ddlClasses, "Id","Name"))">
                        <option value="0">Select Class</option>
                    </select>
                    <label>Subject:</label>
                    <select class="form-control" id="ddlAddSubjectId" name="DistributionMark.SubjectId" asp-for-id="Id" asp-items="@(new SelectList (string.Empty, " Id","Name"))">
                        <option value="0">Select Subject</option>
                    </select>
                    <label>MarkType:</label>
                    <select class="form-control" id="ddlAddMarkTypeId" name="DistributionMark.MarkTypeId" asp-items="@(new SelectList(ViewBag.ddlMarkType, "Id","Name"))">
                        <option value="0">Select MarkType</option>
                    </select>
                    <label>Percentage</label>
                    <input type="number" name="DistributionMark.BreakDownInP" id="txtAddDisMrkMax" required class="form-control">
                    <label>Effective Start Date</label>
                    <input type="text" name="DistributionMark.EffectiveStartDate" id="txtAddDisMrkESD" required class="form-control datetime">
                    <hr />

                    <button class="btn btn-success btn-md" id="btnSaveNewDistributionMark">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Mark Distribution</h4>
            </div>
            <div class="modal-body">
                <form role="form">

                    <input type="hidden" name="editId" id="editId">
                    <label>Class:</label>
                    <select class="form-control" id="ddlEditClassId" name="ddlEditClassId" asp-items="@(new SelectList(ViewBag.ddlClasses, "Id","Name"))">
                        <option value="0">Select Class</option>
                    </select>
                    <label>Subject:</label>
                    <select class="form-control" id="ddlEditSubjectId" name="ddlEditSubjectId" asp-for-id="Id" asp-items="@(new SelectList (string.Empty, " Id","Name"))">
                        <option value="0">Select Subject</option>
                    </select>
                    <label>MarkType:</label>
                    <select class="form-control" id="ddlEditMarkTypeId" name="ddlEditMarkTypeId" asp-items="@(new SelectList(ViewBag.ddlMarkType, "Id","Name"))">
                        <option value="0">Select MarkType</option>
                    </select>

                    <label>Maximum Number</label>
                    <label>Percentage</label>

                    <input type="text" name="txtEditDisMrkMax" id="txtEditDisMrkMax" required class="form-control">

                    <label>Effective Start Date</label>
                    <input type="text" name="txtEditDisMrkESD" id="txtEditDisMrkESD" required class="form-control datetime">
                    <label>Effective End Date</label>
                    <input type="text" name="txtEditDisMrkEED" id="txtEditDisMrkEED" class="form-control datetime">
                    <hr />

                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="DistributionMarks"
                            asp-action="Edit"
                            asp-route-editId="editId"
                            asp-route-ddlEditSubjectId="ddlEditSubjectId"
                            asp-route-ddlEditMarkTypeId="ddlEditMarkTypeId"
                            asp-route-txtEditDisMrkMax="txtEditDisMrkMax"
                            asp-route-txtEditDisMrkESD="txtEditDisMrkESD"
                            asp-route-txtEditDisMrkEED="txtEditDisMrkEED">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Mark Distribution</h4>
            </div>

            <div class="modal-body">
                <p><h3>Are you sure you want to delete this?</h3></p>

            </div>
            <div class="modal-footer">
                <form class="form-inline" role="form">
                    <input type="hidden" name="deleteId" id="deleteId">

                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="DistributionMarks"
                            asp-action="Delete"
                            asp-route-deleteId="deleteId">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts {

    <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })
        $(".datetime").datepicker(
            {
                format: "dd/MM/yyyy",
                autoclose: true
            }
        );


        $("#btnSaveNewDistributionMark").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addDistributionMark")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertDistributionMark", "DistributionMarks", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
  });


        $('tr td #btnEdit').on('click', function () {
            $("#editId").val($(this).data("id"));
            $("#ddlEditSubjectId").val($(this).data("subjectid"));
            $("#ddlEditMarkTypeId").val($(this).data("marktypeid"));
            $("#txtEditDisMrkMax").val($(this).data("max"));
            $("#txtEditDisMrkESD").val($(this).data("effectivestartdate"));
            $("#txtEditDisMrkEED").val($(this).data("effectiveenddate"));
            var classId = $(this).data("classid");
            var subjectId = $(this).data("subjectid");
            $("#ddlEditClassId").val(classId);
                var url = '@Url.Action("DropDown_Classes", "DistributionMarks", new { Area = "Institution" })';
                $.getJSON(url, { ddlClassId: classId }, function (jsonResult) {
                    if (jsonResult.length != 0) {
                        var item = '';
                        $("#ddlEditSubjectId").empty();
                        $.each(jsonResult, function (i, row) {
                            if (row.value == subjectId) {
                                item += "<option value='" + row.value + "' selected='selected'>" + row.text + "</option>";
                            } else
                            item += "<option value='" + row.value + "'>" + row.text + "</option>";
                        });
                        $('#ddlEditSubjectId').html(item);
                    }
                });
        });


        $('tr td #btnDelete').on('click', function () {
            $("#deleteId").val($(this).data("id"));
        });

        //[NOTE: Code for auto change dropdownlist for add form.]
        $("#ddlAddClassId").on('change', function () {
        var url = '@Url.Action("DropDown_Classes", "DistributionMarks", new { Area = "Institution" })';
        var classId = $('#ddlAddClassId').val();
        if (classId != 0) {
            $.getJSON(url, { ddlClassId: classId }, function (jsonResult) {
                if (jsonResult.length != 0) {
                    var item = '';
                    $("#ddlAddSubjectId").empty();
                    $.each(jsonResult, function (i, row) {
                        item += "<option value='" + row.value + "'>" + row.text + "</option>";
                    });
                    $('#ddlAddSubjectId').html(item);
                }
            })
        }
        else {
            $('#ddlAddSubjectId').html("<option value=0>Select Subject</option>");
        }

        });

        //[NOTE: Code for auto change dropdownlist for edit form.]
        $("#ddlEditClassId").on('change', function () {
        var url = '@Url.Action("DropDown_Classes", "DistributionMarks", new { Area = "Institution" })';
        var classId = $('#ddlEditClassId').val();
        if (classId != 0) {
            $.getJSON(url, { ddlClassId: classId }, function (jsonResult) {
                if (jsonResult.length != 0) {
                    var item = '';
                    $("#ddlEditSubjectId").empty();
                    $.each(jsonResult, function (i, row) {
                        item += "<option value='" + row.value + "'>" + row.text + "</option>";
                    });
                    $('#ddlEditSubjectId').html(item);
                }
            })
        }
        else {
            $('#ddlEditSubjectId').html("<option value=0>Select Subject</option>");
        }

    });
    </script>
}

<!-- #endregion  "All Scripts"-->
