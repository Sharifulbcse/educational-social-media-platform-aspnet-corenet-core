
@if (ViewBag.OeErrorMessage != null)
{
    @ViewBag.OeErrorMessage;
}
else
{
    @model OE.Web.Areas.Institution.Models.IndexDistributionMarkActionDatesVM

    <div class="informationArea">
        <span class="label label-info "> Institution: @Model.InstitutionName </span>
    </div>
    <h1 class="page-title">Distribution Mark Action Dates</h1>
    <br />
    <div class="row">
        <div class="col-12 col-sm-6 col-md-6">
            <button class="btn btn-success btn-sm " id="btnAddDistributionMarkActionDate" name="btnAddDistributionMarkActionDate" data-toggle="modal" data-target="#mdlAddDistributionMarkActionDate">
                <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
                New
            </button>
            <label>
                <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Tip: Distribution Mark Action Date" data-content="Distribution mark action dates means distribution mark effective start and end date.">
                    <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
                </a>
            </label>
        </div>
    </div>
    <br />
    <br />
    @if (Model.distributionMarkActionDates.Count() == 0)
    {
        <div class="well"><b>No Record has been added yet.</b></div>
    }
    else
    {       
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>SN</th>
                    <th>Effective Start Date </th>
                    <th>Effective End Date </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;}

                @foreach (var data in Model.distributionMarkActionDates)
                {
                    i = (i + 1);
                    <tr>
                        <td class="showDetails pointer">
                            <b>@i</b>
                            <input type="hidden" name="distributionMarkActionDateId" id="distributionMarkActionDateId" value="@data.Id" />
                        </td>
                        <td class="showDetails pointer">
                            @data.EffectiveStartDate.ToShortDateString()
                        </td>
                        <td class="showDetails pointer">
                            @String.Format("{0:dd-MMM-yy}", data.EffectiveEndDate)
                        </td>

                        <td>
                            <a class="btn btn-default btn-sm" formmethod="get"
                               asp-controller="DistributionMarks"
                               asp-action="DistributionMarkList"
                               asp-route-distributionMarkActionDateId="@data.Id">
                                <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                                Action
                            </a>                           
                            <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-effectiveenddate="@String.Format("{0:dd-MMM-yy}", data.EffectiveEndDate)" data-effectivestartdate="@data.EffectiveStartDate.ToShortDateString()">
                                <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                                Edit
                            </button>
                            <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                                <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                                Delete
                            </button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>        
        <h3 style="color:red">@ViewBag.err</h3>
    }

    <!-- #region "All Modals" -->
    <div id="mdlAddDistributionMarkActionDate" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Add Mark Distribution Action Date</h3>
                </div>
                <div class="modal-body">

                    <form enctype="multipart/form-data" id="addDistributionMarkActionDate">
                        <label>Effective Start Date</label>
                        <input type="text" name="DistributionMarkActionDate.EffectiveStartDate" id="txtAddDisMrkESD" required class="form-control datetime">
                        <hr />

                        <button class="btn btn-success btn-md" id="btnSaveNewDistributionMarkActionDate">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>
                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>

                    </form>

                </div>

            </div>

        </div>
    </div>

    <div id="modalEdit" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Mark Distribution Action Date</h4>
                </div>
                <div class="modal-body">
                    <form role="form">

                        <input type="hidden" name="DistributionMarkActionDate.Id" id="editId">

                        <label>Effective Start Date</label>
                        <input type="text" name="DistributionMarkActionDate.EffectiveStartDate" id="txtEditDisMrkESD" required class="form-control datetime">
                        <label>Effective End Date</label>
                        <input type="text" name="DistributionMarkActionDate.EffectiveEndDate" id="txtEditDisMrkEED" class="form-control datetime">
                        <hr />

                        <button class="btn btn-success btn-md" formmethod="post"
                                asp-controller="DistributionMarks"
                                asp-action="EditDistributionMarkActionDate">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>
                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>

                    </form>

                </div>

            </div>

        </div>
    </div>

    <div id="modalDelete" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Mark Distribution Action Date</h4>
                </div>

                <div class="modal-body">
                    <p><h3>Are you sure you want to delete this?</h3></p>

                </div>
                <div class="modal-footer">
                    <form class="form-inline" role="form">
                        <input type="hidden" name="DistributionMarkActionDate.Id" id="deleteId">

                        <button class="btn btn-success btn-md" formmethod="post"
                                asp-controller="DistributionMarks"
                                asp-action="DeleteDistributionMarkActionDate">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Yes
                        </button>
                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            No
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- #endregion  "All Modals"-->
    <!-- #region "All Scripts" -->

    @section Scripts {

        <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })
        $(".datetime").datepicker(
            {
                format: "dd/MM/yyyy",
                autoclose: true
            }
        );


        $("#btnSaveNewDistributionMarkActionDate").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addDistributionMarkActionDate")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertDistributionMarkActionDate", "DistributionMarks", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

             });
        });


        $('tr td #btnEdit').on('click', function () {
            $("#editId").val($(this).data("id"));
            $("#txtEditDisMrkESD").val($(this).data("effectivestartdate"));
            $("#txtEditDisMrkEED").val($(this).data("effectiveenddate"));
        });


        $('tr td #btnDelete').on('click', function () {
            $("#deleteId").val($(this).data("id"));
        });


        </script>
    }
    <!-- #endregion  "All Scripts"-->
}
