
@model OE.Web.Areas.Institution.Models.IndexCountriesVM

@{
    Layout = "~/Areas/Institution/Views/Shared/_LayoutMain.cshtml";
    ViewData["Title"] = "Countries";
}


<h1 class="page-title">Countries</h1>
<br />
<button class="btn btn-success btn-sm " id="btnAddCountry" name="btnAddCountry" data-toggle="modal" data-target="#mdlAddCountry">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>


<br />
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> Country Name </th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var data in Model._Countries)
        {
            <tr>
                <td class="showDetails pointer">@data.Name</td>
                <td>
                    <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-name="@data.Name">
                        <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                        Edit
                    </button>

                    <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                        <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                        Delete
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>


<!-- #region "All Modals" -->
<div id="mdlAddCountry" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Country</h3>
            </div>
            <div class="modal-body">

                <form enctype="multipart/form-data">

                    
                    <label>Name</label>
                    <input type="text" name="txtAddCountryName" id="txtAddCountryName" required class="form-control">

                    <hr />

                    <button class="btn btn-success btn-md" formmethod="post" 
                            asp-controller="Countries" 
                            asp-action="AddCountry" 
                            asp-route-txtAddCountryName="txtAddCountryName">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Country</h4>
            </div>
            <div class="modal-body">
                <form role="form">

                    <input type="hidden" name="editCountryId" id="editCountryId">

                    <label>Country Name</label>
                    <input type="text" name="txtEditCountryName" required id="txtEditCountryName" class="form-control">
                    <br />

                    <button class="btn btn-success btn-md" formmethod="post" 
                            asp-controller="Countries"
                            asp-action="Edit"
                            asp-route-editCountryId="editCountryId" 
                            asp-route-txtEditCountryName="txtEditCountryName">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Country</h4>
            </div>

            <div class="modal-body">
                <p><h3>Are you sure you want to delete this?</h3></p>

            </div>
            <div class="modal-footer">
                <form class="form-inline" role="form">
                    <input type="hidden" name="deleteCountryId" id="deleteCountryId">

                    <button class="btn btn-success btn-md" formmethod="post" 
                            asp-controller="Countries" 
                            asp-action="Delete" 
                            asp-route-deleteCountryId="deleteCountryId">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts
    {

    <script type="text/javascript">
        $('tr td #btnEdit').on('click', function () {
            $("#editCountryId").val($(this).data("id"));
            $("#txtEditCountryName").val($(this).data("name"));
        });

        $('tr td #btnDelete').on('click', function () {
            $("#deleteCountryId").val($(this).data("id"));
        });

    </script>
}

<!-- #endregion  "All Scripts"-->
