
@if (ViewBag.OeErrorMessage != null)
{
    @ViewBag.OeErrorMessage;
}
else
{
    @model OE.Web.Areas.Institution.Models.IndexClassTimeSchedulesVM

    <div class="informationArea">
        <span class="label label-info "> Institution: @Model.InstitutionName </span>
    </div>
    <h1 class="page-title">Class Time Schedules</h1>
    <br />
    <h6><a asp-area="Institution" asp-controller="ClassTimeSchedules" asp-action="ClassTimeScheduleActionDates">Class Time Schedule Action Date</a><span class="glyphicon glyphicon-chevron-right"></span>Class Time Schedule List</h6>
    <br />
    <div class="row">
        <div class="col-12 col-sm-6 col-md-6">
            <button class="btn btn-success btn-sm " id="btnAddClassTimeSchedule" name="btnAddClassTimeSchedule" data-toggle="modal" data-target="#mdlAddClassTimeSchedule">
                <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
                New
            </button>
            <label>
                <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Tip: Class Time Schedule" data-content="Class Time Schedule means Class Time.">
                    <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
                </a>
            </label>
        </div>
    </div>
    <br />
    <br />
    @if (Model._ClassTimeSchedules.Count() == 0)
    {
        <div class="well"><b>No Record has been added yet.</b></div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>SN</th>
                    <th>Class Start Time </th>
                    <th>Class End Time </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;}

                @foreach (var data in Model._ClassTimeSchedules)
                {
                    i = (i + 1);
                    <tr>
                        <td class="showDetails pointer">
                            <b>@i</b>
                            <input type="hidden" name="classTimeScheduleId" id="classTimeScheduleId" value="@data.Id" />
                        </td>
                        <td class="showDetails pointer">
                            @data.ClassStartTimeSlot
                        </td>
                        <td class="showDetails pointer">
                            @data.ClassEndTimeSlot
                        </td>

                        <td>
                            <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-sorting="@data.Sorting" data-classstrattime="@data.ClassStartTime" data-classendtime="@data.ClassEndTime">
                                <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                                Edit
                            </button>

                            <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                                <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                                Delete
                            </button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <h3 style="color:red">@ViewBag.msg</h3>
    }

    <!-- #region "All Modals" -->
    <div id="mdlAddClassTimeSchedule" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Add Class Time Schedule</h3>
                </div>
                <div class="modal-body">

                    <form enctype="multipart/form-data" id="addClassTimeSchedule">
                        <input type="hidden" name="ClassTimeSchedules.ClassTimeScheduleActionDateId" id="ClassTimeSchedules.ClassTimeScheduleActionDateId" value="@Model.ClassTimeScheduleActionDateId" />

                        <label>Sorting</label>
                        <input type="number" name="ClassTimeSchedules.Sorting" id="txtAddSorting" required class="form-control">

                        <label>Class Start Time</label>
                        <input type="time" name="ClassTimeSchedules.ClassStartTime" id="txtAddCST" required class="form-control">
                        <label>Class End Time</label>
                        <input type="time" name="ClassTimeSchedules.ClassEndTime" id="txtAddCET" required class="form-control">
                        <hr />

                        <button class="btn btn-success btn-md" id="btnSaveNewClassTimeSchedule">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>
                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>

                    </form>

                </div>

            </div>

        </div>
    </div>

    <div id="modalEdit" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Class Time Schedule</h4>
                </div>
                <div class="modal-body">
                    <form enctype="multipart/form-data" id="editClassTimeSchedule">

                        <input type="hidden" name="ClassTimeSchedules.Id" id="editId">
                        <label>Sorting</label>
                        <input type="number" name="ClassTimeSchedules.Sorting" id="txtEditSorting" required class="form-control">
                        <label>Class Start Time</label>
                        <input type="time" name="ClassTimeSchedules.ClassStartTime" id="txtEditCST" required class="form-control">
                        <label>Class End Time</label>
                        <input type="time" name="ClassTimeSchedules.ClassEndTime" id="txtEditCDT" class="form-control">
                        <hr />

                        <button class="btn btn-success btn-md" id="btnEditNewClassTimeSchedule">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>
                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="modalDelete" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form enctype="multipart/form-data" id="deleteClassTimeSchedule">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete</h4>
                    </div>
                    <div class="modal-body">
                        <p><h3>Are you sure you want to delete this?</h3></p>

                    </div>
                    <div class="modal-footer">

                        <input type="hidden" name="deleteId" id="deleteId">
                        <button class="btn btn-md btn-success" id="btnDeleteClassTimeSchedule">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Yes
                        </button>

                        <button class="btn btn-md btn-danger" data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            No
                        </button>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="modalMessage" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Message</h4>
                </div>
                <div class="modal-body">
                    <p><h3 id="txtMessage" style="color:red"></h3></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Ok
                    </button>
                </div>

            </div>
        </div>
    </div>
    <!-- #endregion  "All Modals"-->
    <!-- #region "All Scripts" -->

    @section Scripts {

        <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })

        $("#btnSaveNewClassTimeSchedule").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addClassTimeSchedule")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertClassTimeSchedule", "ClassTimeSchedules", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

             });
        });

        $("#btnEditNewClassTimeSchedule").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#editClassTimeSchedule")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("EditClassTimeSchedule", "ClassTimeSchedules", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

             });
        });

            $("#btnDeleteClassTimeSchedule").on('click', function (e) {
            e.preventDefault();
            var deleteId = $('input#deleteId').val();
             $.ajax({
                type: 'POST',
                data: { deleteId: deleteId },
                dataType: 'json',
                cache: false,
               url: '@Url.Action("DeleteClassTimeSchedule", "ClassTimeSchedules", new { Area = "Institution" })',
                success:function (data) {
                         if (data.success == true) {
                             location.reload();
                         }
                         if (data.success == false) {
                             $('#txtMessage').text(data.message);
                             $('#modalMessage').modal('show');
                         }
                     },
                 error: function (data) {

                 },
                 complete: function (data) {

                 }
                });
  });
            function tConv24(time24) {
                var ts = time24;
                var H = +ts.substr(0, 2);
                var h = (H % 12) || 12;
                h = (h < 10) ? ("0" + h) : h;  // leading 0 at the left for 1 digit hours
                var ampm = H < 12 ? " AM" : " PM";
                ts = h + ts.substr(3, 2) + ampm;
                return ts;
            };


        $('tr td #btnEdit').on('click', function () {
            $("#editId").val($(this).data("id"));
            $("#txtEditSorting").val($(this).data("sorting"));
            $("#txtEditCST").val(tConv24($(this).data("classstarttime")));
            $("#txtEditCET").val(tConv24($(this).data("classendtime")));

        });


        $('tr td #btnDelete').on('click', function () {
            $("#deleteId").val($(this).data("id"));
        });

        </script>
    }
    <!-- #endregion  "All Scripts"-->
}
