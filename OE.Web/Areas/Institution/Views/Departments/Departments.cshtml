@model OE.Web.Areas.Institution.Models.IndexDepartmentVM

<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>

<h1 class="page-title">Department List</h1>
<br />
<button class="btn btn-success btn-sm " id="btnAddDepartment" name="btnAddDepartment" data-toggle="modal" data-target="#mdlAddDepartment">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>
<label>
    <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Departments" data-content="Any institution may have several departments. For Examaple - Sceience, Arts, Commerce etc.">
        <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
    </a>
</label>
<h4 class="text-danger">@ViewBag.msg</h4>

<br />
<br />
@if (Model._DepartmentList.Count() == 0)
{
    <div class="well"><b>No Department has been added yet.</b></div>
}
else
{
    <table class="table table-bordered table-hover" id="tblGetDepartments">
        <thead>
            <tr>
                <th> Department Name </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model._DepartmentList)
            {
                <tr>
                    <td class="showDetails pointer">@data.Name</td>
                    <td>
                        <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-name="@data.Name">
                            <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                            Edit
                        </button>
                        <button class="btn btn-danger btn-sm " id="btnDeleteDeparments" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                            <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

<!-- #region "All Modals" -->
<div id="mdlAddDepartment" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Department</h3>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" id="addDeparments">
                    <label>Name</label>
                    <input type="text" name="DepartmentList.Name" id="txtAddDepartmentName" required class="form-control">
                    <hr />

                    <button class="btn btn-success btn-md" id="btnSaveNewDepartments">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Department</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" name="editDepartmentId" id="editDepartmentId">

                    <label>Department Name</label>
                    <input type="text" name="txtEditDepartmentName" required id="txtEditDepartmentName" class="form-control">
                    <br />


                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="Departments"
                            asp-action="Edit"
                            asp-route-editDepartmentId="editDepartmentId"
                            asp-route-txtEditDepartmentName="txtEditDepartmentName">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Department</h4>
            </div>
            <form enctype="multipart/form-data" id="deleteDepartments">
                <div class="modal-body">
                    <p><h3>Are you sure you want to delete this?</h3></p>

                </div>
                <div class="modal-footer">
                    <input type="hidden" name="departmentId" id="departmentId">
                    <button class="btn btn-md btn-success" id="btnDeleteDept">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>


                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>                   
                </div>               
            </form>            
        </div>
    </div>
</div>

<div id="modalMessage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
            </div>
            <div class="modal-body">
                <p><h3 id="txtMessage" style="color:red"></h3></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-md " data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                    Ok
                </button>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts{
    <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })
        $('tr td #btnEdit').on('click', function () {
            $("#editDepartmentId").val($(this).data("id"));
            $("#txtEditDepartmentName").val($(this).data("name"));
        });
        
          //[NOTE:JS for passing Id while trying to delete a record.]
        $('#tblGetDepartments tr td #btnDeleteDeparments').on('click', function () {            
            $("#departmentId").val($(this).data("id"));
            });



        $("#btnDeleteDept").on('click', function (e) {
            e.preventDefault();
            var departmentId = $('input#departmentId').val();
            $.ajax({
                type: 'POST',
                data: { departmentId: departmentId },
                dataType: 'json',
                cache: false,
                url: '@Url.Action("DeleteDepartments", "Departments", new { Area = "Institution" })',
                success:function (data) {
                        if (data.success == true) {
                            location.reload();
                        }
                        if (data.success == false) {
                            $('#txtMessage').text(data.message);
                            $('#modalMessage').modal('show');
                        }
                    },
                error: function (data) {

                },
                complete: function (data) {

                }  
             });
        });
        

             $("#btnSaveNewDepartments").on('click', function (e) {
            e.preventDefault();
                 var formData = new FormData($("#addDeparments")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertDepartment", "Departments", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
  });

    </script>
}

<!-- #endregion  "All Scripts"-->
