
@if (ViewBag.OeErrorMessage != null)
{
    @ViewBag.OeErrorMessage;
}
else
{
    @model OE.Web.Areas.Institution.Models.IndexAttendanceDetailsVM

    <ol class="breadcrumb pull-left" style="background-color:transparent">
        <li><a asp-controller="Attendances" asp-action="ViewAttendanceCourses" asp-area="Institution">Courses Index</a></li>
        <li>           
            <a asp-controller="Attendances"
               asp-action="StudentListForViewAttendance"
               asp-area="Institution"
               asp-route-EmployeeId="@Model.EmployeeId"
               asp-route-SelectedYear="@Model.SelectedYear"
               asp-route-AssignedCourseId="@Model.AssignedCourseId"
               asp-route-ClassName="@Model.ClassName"
               asp-route-AssignedCourseName="@Model.AssignedCourseName"
               asp-route-AssignedSectionName="@Model.AssignedSectionName"
               asp-route-AssignedSectionId="@Model.AssignedSectionId"
               asp-route-ClassId="@Model.ClassId">Student Attendance List</a>            
        </li>

        <li class="active">Attendance Details</li>
    </ol>

    <div class="informationArea">
        <span class="label label-info "> Institution: @Model.InstitutionName </span>
    </div>
    <br />
    <br />
    <h1 class="page-title">   @ViewData["Title"]</h1>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3">
                <img class="img-circle" src="~/@Model.IP300X200" alt="Student Image" />

            </div>

            <br />
        </div>
        <div class="row center-block">  <label>Student Name: @Model.StudentName</label></div>
 
        <div class="row">
            <div class="col-md-4">Class:<b> @Model.ClassName</b></div>
            <div class="col-md-4">Course: <b>@Model.AssignedCourseName</b></div>
            <div class="col-md-4">Section: <b>@Model.AssignedSectionName</b></div>
        </div>

        <div class="row">
            <div class="col-md-4">Total Class: <b>@Model.TotalClasses day</b></div>
            <div class="col-md-4">Total Presents: <b>@Model.TotalPresents day</b></div>
            <div class="col-md-4">Total Absents: <b>@Model.TotalAbsents day</b></div>
        </div>

    </div>
    <br />
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="50px"> #SN </th>
                    <th width="120px"> Date </th>
                    <th class="text-center"> Time Slot</th>
                    <th> Status</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model._Atendances)
                {
                    <tr>
                        <td class="showDetails pointer"> @i</td>
                        <td class="showDetails pointer">@item.AttendanceDate.ToShortDateString()</td>
                        <td class="showDetails pointer text-center">@item.TimeSlot</td>


                        @if (item.IsPresent == true)
                        {
                            <td class="showDetails pointer text-center" style="background-color:green;"><b>Present</b></td>
                        }
                        else
                        {
                            <td class="showDetails pointer text-center" style="background-color:red;"><b>Absent</b></td>
                        }
                        <td>
                            <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@item.Id" data-ispresent="@item.IsPresent">
                                <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                                Edit
                            </button>
                        </td>

                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
    <!-- #region "All Modals" -->
    <div id="modalEdit" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Attendance</h4>
                </div>
                <div class="modal-body">
                    <form enctype="multipart/form-data" id="editAttendance">
                        <input type="hidden" name="Attendance.Id" id="editId">
                        <label>
                            <input type="checkbox" id="editIsPresent" name="Attendance.IsPresent" value="true" checked />
                            Is Present
                        </label>
                        <hr />

                        <button class="btn btn-success btn-md" id="btnEditNewAttendance">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>
                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion  "All Modals"-->

    <!-- #region "All Scripts" -->
    @section Scripts
        {

        <script type="text/javascript">

            $('tr td #btnEdit').on('click', function () {
                $("#editId").val($(this).data("id"));
                var ValueOfIsPresent = $(this).data("ispresent");

                if (ValueOfIsPresent == "True") {
                    $('#editIsPresent').prop('checked', true);
                } else {
                    $('#editIsPresent').prop('checked', false);
                }
            });

            $("#btnEditNewAttendance").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#editAttendance")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("EditAttendance", "Attendances", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

             });
        });

        </script>

    }

    <!-- #endregion  "All Scripts"-->

}