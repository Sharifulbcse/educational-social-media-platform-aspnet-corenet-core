
@model OE.Web.Areas.Institution.Models.IndexRegistrationGroupVM

<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>

<h1 class="page-title">@Model.COM_RegistrationUserTypesVM.Name Registration Groups</h1>



<br />
<button class="btn btn-success btn-sm " id="btnAddRegistrationGroup" name="btnAddRegistrationGroup" data-toggle="modal" data-target="#mdlAddRegistrationGroup">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>

<br />
<br />


@if (Model._RegistrationGroupList.Count() != 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Group Name </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model._RegistrationGroupList)
                {
                    if (data.RegistrationUserTypeId == Model.COM_RegistrationUserTypesVM.Id)
                    {
                        <tr>
                            <td class="showDetails pointer">@data.Name</td>
                            <td>
                                <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit"
                                        data-id="@data.Id"
                                        data-name="@data.Name"
                                        data-registrationUserTypeId="@data.RegistrationUserTypeId">
                                    <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                                    Edit
                                </button>

                                <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id" data-regUserTypeId="@data.RegistrationUserTypeId">
                                    <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                                    Delete
                                </button>

                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="well"><b>No @Model.COM_RegistrationUserTypesVM.Name Registration group has been created yet.</b></div>

}


<!-- #region "All Modals" -->
<div id="mdlAddRegistrationGroup" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Registration Group</h3>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" id="addRegGroups">
                    <label>Name</label>
                    <input type="text" name="RegistrationGroupList.Name" id="txtAddRegistrationGroupName" required class="form-control">
                    <input type="hidden" value="@Model.COM_RegistrationUserTypesVM.Id" name="RegistrationGroupList.RegistrationUserTypeId" class="form-control">

                    <hr />                   
                    <button class="btn btn-success btn-md" id="btnSaveNewRegGroups">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Registration Group</h4>
            </div>
            <div class="modal-body">
                <form role="form">

                    <input type="hidden" name="editRegistrationGroupId" id="editRegistrationGroupId">

                    <label>Registration Group Name</label>
                    <input type="text" name="txtEditRegistrationGroupName" required id="txtEditRegistrationGroupName" class="form-control">
                    <br />
                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="Registrations"
                            asp-action="EditRegistrationGroup"
                            asp-route-editRegistrationGroupId="editRegistrationGroupId"
                            asp-route-editRegUserType="@Model.COM_RegistrationUserTypesVM.Id">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Registration Group</h4>
            </div>

            <div class="modal-body">
                <p><h3>Are you sure you want to delete this?</h3></p>

            </div>
            <div class="modal-footer">
                <form class="form-inline" role="form">
                    <input type="hidden" name="deleteRegistrationGroupId" id="deleteRegistrationGroupId">
                    <input type="hidden" name="deleteRegUserTypeId" id="deleteRegUserTypeId">

                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="Registrations"
                            asp-action="DeleteRegistrationGroup"
                            asp-route-deleteRegistrationGroupId="deleteRegistrationGroupId"
                            asp-route-deleteRegUserTypeId="@Model.COM_RegistrationUserTypesVM.Id">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts
    {

    <script type="text/javascript">
        $('tr td #btnEdit').on('click', function () {
            $("#editRegistrationGroupId").val($(this).data("id"));
            $("#txtEditRegistrationGroupName").val($(this).data("name"));
        });

        $('tr td #btnDelete').on('click', function () {
            $("#deleteRegistrationGroupId").val($(this).data("id"));
             $("#deleteRegUserTypeId").val($(this).data("regusertypeid"));

        });
        $("#btnSaveNewRegGroups").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addRegGroups")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertRegistrationGroup", "Registrations", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
        });        
    </script>
}
<!-- #endregion  "All Scripts"-->
