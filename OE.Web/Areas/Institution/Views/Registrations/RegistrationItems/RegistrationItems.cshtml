
@model OE.Web.Areas.Institution.Models.IndexRegistrationItemVM

<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>

<h1 class="page-title">@Model.COM_RegistrationUserTypesVM.Name Registration Items</h1>


<br />
<button class="btn btn-success btn-sm " id="btnAddRegistrationItem" name="btnAddRegistrationItem" data-toggle="modal" data-target="#mdlAddRegistrationItem">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>


<br />
<br />

@if (Model._RegistrationItemList.Count() != 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th> Registration Item</th>
                    <th> Registration Group</th>
                    <th> Registration Item Type</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model._RegistrationItemList)
                {
                    if (data.RegistrationUserTypeId == Model.COM_RegistrationUserTypesVM.Id)
                    {
                        <tr>
                            <td class="showDetails pointer">@data.Name</td>
                            <td class="showDetails pointer">@data.RegistrationGroupName</td>
                            <td class="showDetails pointer">@data.RegistrationItemTypeName</td>
                            <td>
                                <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-name="@data.Name" data-reggroupid="@data.RegistrationGroupId" data-regitypeid="@data.RegistrationItemTypeId" data-regusertype="@data.RegistrationUserTypeId">
                                    <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                                    Edit
                                </button>

                                <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id" data-registrationusertype="@data.RegistrationUserTypeId">
                                    <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                                    Delete
                                </button>


                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div class="well"><b>No @Model.COM_RegistrationUserTypesVM.Name Registration Item has been created yet.</b></div>

}

<!-- #region "All Modals" -->
<div id="mdlAddRegistrationItem" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Registration Item</h3>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" id="addRegItems">
                    <label>Select Registration Group:</label>
                    <select class="form-control" name="RegistrationItemList.RegistrationGroupId" id="ddlAddRegGroupId" asp-for-id="Id" asp-items="@(new SelectList (ViewBag.ddlRegistrationGroups, "Id","Name"))">
                        <option value="0">Select Registration Group</option>
                    </select>
                    <label>Item Name</label>
                    <input type="text" name="RegistrationItemList.Name" id="txtAddRegistrationItemName" required class="form-control">

                    <input type="hidden" name="RegistrationItemList.RegistrationUserTypeId" value="@Model.COM_RegistrationUserTypesVM.Id" class="form-control">
                    <label>Select Item Field Type:</label>
                    <select class="form-control" name="RegistrationItemList.RegistrationItemTypeId" id="ddlAddRegITypeId" asp-for-id="Id" asp-items="@(new SelectList (ViewBag.ddlComRegistrationItemTypes, "Id","Name"))">
                        <option value="0">Select Field Type</option>
                    </select>
                    <hr />
                    <button class="btn btn-success btn-md" id="btnSaveNewRegItems">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Registration Item</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" name="editRegistrationItemId" id="editRegistrationItemId">


                    <label>Select Registration Group:</label>
                    <select class="form-control" name="ddlEditRegGroupId" id="ddlEditRegGroupId" asp-for-id="Id" asp-items="@(new SelectList (ViewBag.ddlRegistrationGroups, "Id","Name"))">
                        <option value="0">Select Field Type</option>
                    </select>
                    <label>Item Name</label>
                    <input type="text" name="txtEditRegistrationItemName" required id="txtEditRegistrationItemName" class="form-control">
                    <label>Select Item Field Type:</label>
                    <select class="form-control" name="ddlEditRegITypeId" id="ddlEditRegITypeId" asp-for-id="Id" asp-items="@(new SelectList (ViewBag.ddlComRegistrationItemTypes, "Id","Name"))">
                        <option value="0">Select Field Type</option>
                    </select>


                    <br />


                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="Registrations"
                            asp-action="EditRegistrationItem"
                            asp-route-editRegistrationItemId="editRegistrationItemId"
                            asp-route-txtEditRegistrationItemName="txtEditRegistrationItemName"
                            asp-route-ddlEditRegITypeId="ddlEditRegITypeId"
                            asp-route-ddlEditRegGroupId="ddlEditRegGroupId"
                            asp-route-ddlregusertype="@Model.COM_RegistrationUserTypesVM.Id">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Registration Item</h4>
            </div>
            <div class="modal-body">
                <p><h3>Are you sure you want to delete this?</h3></p>
            </div>
            <div class="modal-footer">
                <form class="form-inline" role="form">
                    <input type="hidden" name="deleteRegistrationItemId" id="deleteRegistrationItemId">


                    <input type="hidden" name="ddlregusertype" id="ddlregusertype">
                    
                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="Registrations"
                            asp-action="DeleteRegistrationItem"
                            asp-route-ddlregusertype="@Model.COM_RegistrationUserTypesVM.Id">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts
    {

    <script type="text/javascript">
        $('tr td #btnEdit').on('click', function () {
            $("#editRegistrationItemId").val($(this).data("id"));
            $("#txtEditRegistrationItemName").val($(this).data("name"));
            $("#ddlEditRegITypeId").val($(this).data("regitypeid"));
            $("#ddlEditRegGroupId").val($(this).data("reggroupid"));

            $("#ddlregusertype").val($(this).data("regusertype"));

        });

        $('tr td #btnDelete').on('click', function () {
            $("#deleteRegistrationItemId").val($(this).data("id"));

            $("#ddlregusertype").val($(this).data("registrationusertype"));

        });
       
        $("#btnSaveNewRegItems").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addRegItems")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertRegistrationItem", "Registrations", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }
                });
        });
       
    </script>
}

<!-- #endregion  "All Scripts"-->
