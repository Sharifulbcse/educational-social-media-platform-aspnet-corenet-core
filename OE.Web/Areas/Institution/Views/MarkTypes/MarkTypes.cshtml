@model OE.Web.Areas.Institution.Models.IndexMarkTypesVM

<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>
<h1 class="page-title">List of Mark Types</h1>
<br />
<button class="btn btn-success btn-sm " id="btnAddMarkTypes" name="btnAddMarkTypes" data-toggle="modal" data-target="#mdlAddMarkTypes">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>
<label>
    <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Mark Type" data-content="Mark Types may be Subjective, Objective, Practical marks.">
        <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
    </a>
</label>

<br />
<br />
@if (Model._MarkTypesList.Count() == 0)
{
    <div class="well"><b>No Record has been added yet.</b></div>
}

else
{
    <table class="table table-bordered table-hover" id="tblGetMarkTypes">
        <thead>
            <tr>
                <th> Name </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model._MarkTypesList)
            {
                <tr>
                    <td class="showDetails pointer">@data.Name</td>
                    <td>
                        <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-name="@data.Name">
                            <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                            Edit
                        </button>
                        <button class="btn btn-danger btn-sm " id="btnDeleteMarkTypes" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                            <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
<div id="mdlAddMarkTypes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add MarkType</h3>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" id="addMarkTypes">
                    <label>
                        Mark Type Name
                        <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Mark Type Name" data-content="Mark Type Name may be Subjective, Objective, Practical marks.">
                            <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
                        </a>
                    </label>
                    <input type="text" name="MarkTypesList.Name" id="txtAddMarkTypesName" required class="form-control">

                    <hr />
                    <button class="btn btn-success btn-md" id="btnSaveNewMarkTypes">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Mark Type</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" name="editMarkTypesId" id="editMarkTypesId" required class="form-control">
                    <label>Mark Type Name</label>
                    <input type="text" name="txtEditMarkTypesName" id="txtEditMarkTypesName" required class="form-control">
                    <hr />
                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="MarkTypes"
                            asp-action="Edit"
                            asp-route-editMarkTypesId="editMarkTypesId"
                            asp-route-txtEditMarkTypesName="txtEditMarkTypesName">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
           
            <form enctype="multipart/form-data">
                
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete MarkTypes</h4>
                </div>

                <div class="modal-body">
                    <p><h3>Are you sure you want to delete this?</h3></p>

                </div>
                <div class="modal-footer">                    
                    <input type="hidden" name="markTypesId" id="markTypesId">
                    <button class="btn btn-md btn-success" id="btnDeletemarkTypesId">
                       
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No

                    </button>                 

                </div>
                
            </form>
            
        </div>
    </div>
</div>

<div id="modalMessage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
            </div>
            <div class="modal-body">
                <p><h3 id="txtMessage" style="color:red"></h3></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-md " data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                    Ok
                </button>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts{
    <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })
        $('tr td #btnEdit').on('click', function () {
            $("#editMarkTypesId").val($(this).data("id"));
            $("#txtEditMarkTypesName").val($(this).data("name"));
        });       
        $('#tblGetMarkTypes tr td #btnDeleteMarkTypes').on('click', function () {
            $("#markTypesId").val($(this).data("id"));
            });


        $("#btnDeletemarkTypesId").on('click', function (e) {
            e.preventDefault();
            var markTypesId = $('input#markTypesId').val();
            $.ajax({
                type: 'POST',
                data: { markTypesId: markTypesId },
                dataType: 'json',
                cache: false,
               url: '@Url.Action("DeleteMarkTypes", "MarkTypes", new { Area = "Institution" })',
               success:function (data) {
                        if (data.success == true) {
                            location.reload();
                        }
                        if (data.success == false) {
                            $('#txtMessage').text(data.message);
                            $('#modalMessage').modal('show');
                        }
                    },
                error: function (data) {

                },
                complete: function (data) {

                }   
             });
        });
        
        $("#btnSaveNewMarkTypes").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addMarkTypes")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertMarkTypes", "MarkTypes", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
        });

    </script>
}

<!-- #endregion  "All Scripts"-->
