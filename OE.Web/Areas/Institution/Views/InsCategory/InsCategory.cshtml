
@model OE.Web.Areas.Institution.Models.IndexInsCategoryVM
@{
    Layout = "~/Areas/Institution/Views/Shared/_LayoutMain.cshtml";
    ViewData["Title"] = "Instituion Category";
}

<h1 class="page-title">Instituion Category List</h1>
<br />
<button class="btn btn-success btn-sm " id="btnAddInsCategory" name="btnAddInsCategory" data-toggle="modal" data-target="#mdlAddInsCategory">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>


<br />
<br />

<div class="table-responsive">

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> Institute Category </th>
                <th> Associated Country</th>
                <th>Action </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model.InsCategories)
            {
                <tr>
                    <td class="showDetails pointer">@data.Name</td>
                    <td class="showDetails pointer">@data.CountryName</td>
                    <td>
                        <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-name="@data.Name" data-insCategoryId="@data.CountryId">
                            <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                            Edit
                        </button>

                        <button class="btn btn-danger btn-sm " id="btnDelete" name="btnDelete" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                            <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>

<!-- #region "All Modals" -->
<div id="mdlAddInsCategory" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Instituion Category</h3>
            </div>
            <div class="modal-body">

                <form enctype="multipart/form-data">                   
                    <label>Select Country:</label>
                    @Html.DropDownList("ddlAddCountryId", Model.Countries, "--- Select ---", new { @class = "form-control" })
                    <label>Institution Category Name</label>
                    <input type="text" name="txtAddInsCategoryName" id="txtAddInsCategoryName" required class="form-control">
                    <hr />                    
                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="InsCategory"
                            asp-action="AddInsCategory"
                            asp-route-txtAddInsCategoryName="txtAddInsCategoryName"
                            asp-route-ddlAddCountryId="ddlAddCountryId">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Instituion Category</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" name="editInsCategoryId" id="editInsCategoryId" required class="form-control">
                    <label>Institution Category Name</label>
                    <input type="text" name="txtEditInsCategoryName" id="txtEditInsCategoryName" required class="form-control">

                    <label>Select Country:</label>
                    @Html.DropDownList("ddlEditCountryId", Model.Countries, "--- Select ---", new { @class = "form-control" })

                    <hr />
                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="InsCategory"
                            asp-action="Edit"
                            asp-route-editInsCategoryId="editInsCategoryId"
                            asp-route-txtEditInsCategoryName="txtEditInsCategoryName"
                            asp-route-ddlEditCountryId="ddlEditCountryId">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Instituion Category</h4>
            </div>

            <div class="modal-body">
                <p><h3>Are you sure you want to delete this?</h3></p>

            </div>
            <div class="modal-footer">
                <form class="form-inline" role="form">
                    <input type="hidden" name="deleteInsCategoryId" id="deleteInsCategoryId">

                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="InsCategory"
                            asp-action="Delete"
                            asp-route-deleteInsCategoryId="deleteInsCategoryId">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts
    {

    <script type="text/javascript">
        $('tr td #btnEdit').on('click', function () {
            $("#editInsCategoryId").val($(this).data("id"));
            $("#txtEditInsCategoryName").val($(this).data("name"));
            $("#ddlEditCountryId").val($(this).data("inscategoryid"));

        });

        $('tr td #btnDelete').on('click', function () {
            $("#deleteInsCategoryId").val($(this).data("id"));
        });

    </script>
}

<!-- #endregion  "All Scripts"-->
