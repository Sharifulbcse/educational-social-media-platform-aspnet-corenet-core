@if (ViewBag.OeErrorMessage != null)
{
    @ViewBag.OeErrorMessage;
}
else
{
    @model OE.Web.Areas.Institution.Models.IndexExamTypeVM

    <div class="informationArea">
        <span class="label label-info "> Institution: @Model.InstitutionName </span>
    </div>
    <h1 class="page-title">List of Exam Types</h1>
    <br />
    <div class="row">
        <div class="col-12 col-sm-6 col-md-6">
            <button class="btn btn-success btn-sm " id="btnAddExamTypes" name="btnAddExamTypes" data-toggle="modal" data-target="#mdlAddExamTypes">
                <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
                New
            </button>
            <label>

                <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Exam Types" data-content="Exam Type may be First term, mid term, Final etc.">
                    <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
                </a>
            </label>
        </div>
        <div class="col-12 col-sm-6 col-md-3 pull-right">
            <form id="filterSearch" asp-area="Institution" asp-controller="ExamTypes" asp-action="ExamTypes" asp-route-ddlClassId="ddlClassId" method="get">
                <select class="form-control" id="ddlClassId" name="ddlClassId" asp-items="@(new SelectList(ViewBag.ddlClass, "Id","Name", Model.SelectedClassId))" onchange="this.form.submit();">
                    <option value="0">All Classes</option>
                </select>
            </form>
        </div>
    </div>
    <h4 class="text-danger">@ViewBag.msg</h4>

    <br />
    <br />

    @if (Model._ExamTypesList.Count() == 0)
    {
        <div class="well"><b>No Record has been added yet.</b></div>
    }

    else
    {
        <table class="table table-bordered table-hover" id="tblGetExamTypes">
            <thead>
                <tr>
                    <th>SL</th>
                    <th> Class </th>
                    <th> Name </th>
                    <th> Mark % </th>
                    <th> Is Last Exam </th>
                    <th>Action </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var data in Model._ExamTypesList)
                {
                    string Icon_Ok = "<i class=" + "\"glyphicon  glyphicon-ok \"" + "style =" + " \"font-size:20px;color:green\"" + "></i>";

                    <tr>
                        <td class="showDetails pointer">@data.Sorting</td>
                        <td class="showDetails pointer">@data.ClassName</td>
                        <td class="showDetails pointer">@data.Name</td>
                        <td class="showDetails pointer">@data.BreakDownInP</td>
                        <td class="showDetails pointer">@Html.Raw(data.IsLastExam != true ? "" : Icon_Ok) </td>


                        <td>

                            <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-classid="@data.ClassId" data-name="@data.Name" data-sorting="@data.Sorting" data-breakdowninp="@data.BreakDownInP" data-islastexam="@data.IsLastExam">
                                <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                                Edit
                            </button>
                            <button class="btn btn-danger btn-sm " id="btnDeleteExamTypes" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                                <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                                Delete
                            </button>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }

    <!-- #region "All Modals" -->
    <div id="mdlAddExamTypes" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3>Add ExamType</h3>
                </div>
                <div class="modal-body">
                    <form enctype="multipart/form-data" id="addExamtypes">

                        <label>Sorting No</label>
                        <input type="number" name="ExamType.Sorting" id="txtAddSortingNo" required class="form-control">

                        <label>Class</label>
                        <select class="form-control" id="ddlAddClass" name="ExamType.ClassId" asp-items="@(new SelectList(ViewBag.ddlClass, "Id","Name"))">
                            <option value="0">Select Class</option>
                        </select>

                        <label>Name</label>
                        <input type="text" name="ExamType.Name" id="txtAddExamTypesName" required class="form-control">
                        <label>
                            Total Percentage
                            <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Total Percentage"
                               data-content="Exam Types must be calculated within 100. Suppose- First Team is 30, Mid Team is 30 and Final is 40. All togather must be 100.">
                                <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
                            </a>
                        </label>
                        <input type="number" name="ExamType.BreakDownInP" id="txtAddBreakDownInP" required class="form-control">
                        <br />
                        <label class="checkbox-inline"><input type="checkbox" value="true" name="ExamType.IsLastExam" id="IsLastExam">Is Last Exam</label>

                        <br />
                        <hr />
                        <button class="btn btn-success btn-md" id="btnSaveNewExamTypes">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>

                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>

                    </form>

                </div>

            </div>

        </div>
    </div>

    <div id="modalEdit" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit ExamType</h4>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <input type="hidden" name="ExamType.Id" id="editExamTypeId">

                        <label>Sorting No</label>
                        <input type="number" name="ExamType.Sorting" id="editSortingNo" required class="form-control">

                        <label>Class</label>
                        <select class="form-control" id="ddlEditClass" name="ExamType.ClassId" asp-items="@(new SelectList(ViewBag.ddlClass, "Id","Name"))">
                            <option value="0">Select Class</option>
                        </select>
                        <label>ExamType Name</label>
                        <input type="text" name="ExamType.Name" required id="txtEditExamTypeName" class="form-control">
                        <label>Total Percentage</label>
                        <input type="text" name="ExamType.BreakDownInP" required id="txtEditbreakdowninp" class="form-control">
                        <br />
                        <label class="checkbox-inline"><input type="checkbox" value="true" name="ExamType.IsLastExam" id="editIsLastExam">Is Last Exam</label>

                        <br />
                        <br />
                        <button class="btn btn-success btn-md" formmethod="post"
                                asp-controller="ExamTypes"
                                asp-action="Edit">
                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Save
                        </button>

                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            Cancel
                        </button>

                    </form>

                </div>

            </div>

        </div>
    </div>

    <div id="modalDelete" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <form enctype="multipart/form-data">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete Exam Types</h4>
                    </div>

                    <div class="modal-body">
                        <p><h3>Are you sure you want to delete this?</h3></p>

                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="examTypesId" id="examTypesId">
                        <button class="btn btn-md btn-success" id="btnDeleteExamTypesId">

                            <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                            Yes
                        </button>

                        <button class="btn btn-danger btn-md " data-dismiss="modal">
                            <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                            No
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div id="modalMessage" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Message</h4>
                </div>
                <div class="modal-body">
                    <p><h3 id="txtMessage" style="color:red"></h3></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Ok
                    </button>
                </div>

            </div>
        </div>
    </div>
    <!-- #endregion  "All Modals"-->
    <!-- #region "All Scripts" -->

    @section Scripts{
        <script type="text/javascript">
            //[NOTE: Tip]
            $('[data-toggle="popover"]').popover({
                trigger: 'focus'
            })
            $('tr td #btnEdit').on('click', function () {
                $("#editExamTypeId").val($(this).data("id"));
                $("#txtEditExamTypeName").val($(this).data("name"));
                $("#ddlEditClass").val($(this).data("classid"));
                $("#editSortingNo").val($(this).data("sorting"));
                $("#txtEditbreakdowninp").val($(this).data("breakdowninp"));
                var lastExamActivation = $(this).data("islastexam");
                if (lastExamActivation == "True") {
                    $('#editIsLastExam').prop('checked', true);
                } else {
                    $('#editIsLastExam').prop('checked', false);
                }
            });
            $('#tblGetExamTypes tr td #btnDeleteExamTypes').on('click', function () {
                $("#examTypesId").val($(this).data("id"));
            });


            $("#btnDeleteExamTypesId").on('click', function (e) {
            e.preventDefault();
            var examTypesId = $('input#examTypesId').val();
            $.ajax({
                type: 'POST',
                data: { examTypesId: examTypesId },
                dataType: 'json',
                cache: false,
               url: '@Url.Action("DeleteExamTypes", "ExamTypes", new { Area = "Institution" })',
                success:
                    
                    function (data) {
                        if (data.success == true) {
                            location.reload();
                        }
                        if (data.success == false) {
                            $('#txtMessage').text(data.message);
                            $('#modalMessage').modal('show');
                        }
                    },
                error: function (data) {

                },
                complete: function (data) {

                }  
             });
        });

            $("#btnSaveNewExamTypes").on('click', function (e) {
            e.preventDefault();
                var formData = new FormData($("#addExamtypes")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertExamTypes", "ExamTypes", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
        });

        </script>
    }

    <!-- #endregion  "All Scripts"-->

}
