@model OE.Web.Areas.Institution.Models.IndexEmployeeTypeVM


<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>

<h1 class="page-title">List of Employee Type</h1>
<br />
<button class="btn btn-success btn-sm " id="btnAddEmployeeTypes" name="btnAddEmployeeTypes" data-toggle="modal" data-target="#mdlAddEmployeeTypes">
    <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
    New
</button>
<label>
    <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Employee Types" data-content="Employee type indicates designation of an employee. It may be faculty, register and so on">
        <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
    </a>
</label>
<h4 class="text-danger">@ViewBag.msg</h4>

<br />
<br />
@if (Model._EmployeeTypeList.Count() == 0)
{
    <div class="well"><b>No Employee Type has been added yet.</b></div>
}
else
{
    <table class="table table-bordered table-hover" id="tblGetEmployeeTypes">
        <thead>
            <tr>
                <th> Name </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model._EmployeeTypeList)
            {
                <tr>
                    <td class="showDetails pointer">@data.Name</td>
                    <td>
                        <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit"
                                data-id="@data.Id"
                                data-name="@data.Name">
                           
                            <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                            Edit
                        </button>
                        <button class="btn btn-danger btn-sm " id="btnDeleteEmployeeTypes" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                            <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

<!-- #region "All Modals" -->
<div id="mdlAddEmployeeTypes" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add EmployeeTypes</h3>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" id="addEmployeeTypes">

                    <label>Name</label>
                    <input type="text" name="EmployeeTypeList.Name" id="txtAddEmployeeTypesName" required class="form-control">

                    <hr />
                    <button class="btn btn-success btn-md" id="btnSaveNewEmployeeTypes">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit EmployeeTypes</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" name="editEmployeeTypesId" id="editEmployeeTypesId">

                    <label>Types</label>
                    <input type="text" name="txtEditEmployeeTypesName" required id="txtEditEmployeeTypesName" class="form-control">
                    <br />


                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="EmployeeTypes"
                            asp-action="Edit"
                            asp-route-editEmployeeTypesId="editEmployeeTypesId"
                            asp-route-txtEditEmployeeTypesName="txtEditEmployeeTypesName">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>

                </form>

            </div>

        </div>

    </div>
</div>
<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">

            <form enctype="multipart/form-data" id="EmployeeTypes">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete EmployeeTypes</h4>
                </div>

                <div class="modal-body">
                    <p><h3>Are you sure you want to delete this?</h3></p>

                </div>
                <div class="modal-footer">                    
                    <input type="hidden" name="employeeTypesId" id="employeeTypesId">
                    <button class="btn btn-md btn-success" id="btnDeleteEmpTypes">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>

                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>                    
                </div>                
            </form>            
        </div>
    </div>
</div>
<div id="modalMessage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
            </div>
            <div class="modal-body">
                <p><h3 id="txtMessage" style="color:red"></h3></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-md " data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                    Ok
                </button>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts{

    <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })
        $('tr td #btnEdit').on('click', function () {
            $("#editEmployeeTypesId").val($(this).data("id"));
            $("#txtEditEmployeeTypesName").val($(this).data("name"));
        });
        
        $('#tblGetEmployeeTypes tr td #btnDeleteEmployeeTypes').on('click', function () {
            $("#employeeTypesId").val($(this).data("id"));
        });

        $("#btnDeleteEmpTypes").on('click', function (e) {
            e.preventDefault();
            var employeeTypesId = $('input#employeeTypesId').val();

            $.ajax({
                type: 'POST',
                data: { employeeTypesId: employeeTypesId },
                dataType: 'json',
                cache: false,
               url: '@Url.Action("DeleteEmployeeTypes", "EmployeeTypes", new { Area = "Institution" })',
               success:function (data) {
                        if (data.success == true) {
                            location.reload();
                        }
                        if (data.success == false) {
                            $('#txtMessage').text(data.message);
                            $('#modalMessage').modal('show');
                        }
                    },
                error: function (response) {
                   alert('error: ' + response.message);
                 },
                complete: function () {
                 }

                });
        });

        $("#btnSaveNewEmployeeTypes").on('click', function (e) {
            e.preventDefault();
            var formData = new FormData($("#addEmployeeTypes")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertEmployeeTypes", "EmployeeTypes", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
  });

    </script>
}

<!-- #endregion  "All Scripts"-->
