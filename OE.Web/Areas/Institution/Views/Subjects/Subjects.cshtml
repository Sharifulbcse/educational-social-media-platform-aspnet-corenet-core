@model OE.Web.Areas.Institution.Models.IndexSubjectsVM

<div class="informationArea">
    <span class="label label-info "> Institution: @Model.InstitutionName </span>
</div>

<h1 class="page-title">All Subjects</h1>
<br />

<div class="row">
    <div class="col-12 col-sm-6 col-md-6">
        <button class="btn btn-success btn-sm " id="btnAddSubjects" name="btnAddSubjects" data-toggle="modal" data-target="#mdlAddSubjects">
            <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span>
            New
        </button>
        <label>

            <a tabindex="0" data-toggle="popover" data-trigger="focus" data-container="body" title="Tip:Subjects" data-content="Subject means Bangla,English etc.">
                <span class="glyphicon glyphicon-info-sign" style="top:5px; font-size:larger"></span>
            </a>
        </label>
    </div>
    <div class="col-12 col-sm-6 col-md-3 pull-right">
        <form id="filterSearch" asp-area="Institution" asp-controller="Subjects" asp-action="Subjects" asp-route-ddlClassId="ddlClassId" method="get">
            <select class="form-control" id="ddlClassId" name="ddlClassId" asp-items="@(new SelectList(ViewBag.ddlClasses, "Id","Name", Model.SelectedClassId))" onchange="this.form.submit();">
                <option value="0">All Classes</option>
            </select>
        </form>
    </div>
</div>

<h4 class="text-danger">@ViewBag.msg</h4>

<br />
<br />
@if (Model._subjectsVM.Count() == 0)
{
    <div class="well"><b>No Record has been added yet.</b></div>
}

else
{
   <table class="table table-bordered table-hover" id="tblGetSubject">
        <thead>
            <tr>
                <th> Subject </th>
                <th> Subject Type</th>
                <th> Class </th>
                <th>  </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in Model._subjectsVM)
            {
                <tr>
                    <td class="showDetails pointer">@data.Name</td>
                    <td class="showDetails pointer">@data.SubjectTypeName</td>
                    <td class="showDetails pointer">@data.ClassName</td>
                    <td>
                        <button class="btn btn-primary btn-sm" id="btnEdit" name="btnEdit" data-toggle="modal" data-target="#modalEdit" data-id="@data.Id" data-name="@data.Name" data-classid="@data.ClassId" data-subjecttypesid="@data.SubjectTypeId">

                            <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span>
                            Edit
                        </button>
                        <button class="btn btn-danger btn-sm " id="btnDeleteSubject" data-toggle="modal" data-target="#modalDelete" data-id="@data.Id">
                            <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span>
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
<h3 style="color:red">@ViewBag.err</h3>

<!-- #region "All Modals" -->
<div id="mdlAddSubjects" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h3>Add Subject</h3>

            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" id="addSubjects">
                    <label>Subject Name</label>
                    <input type="text" name="subjectsVM.Name" id="addSubName" required class="form-control">
                    <label>Class:</label>
                    <select class="form-control" id="ddlAddClassesId" name="subjectsVM.ClassId" asp-items="@(new SelectList(ViewBag.ddlClasses, "Id","Name"))">
                        <option value="0">Select Class</option>
                    </select>
                    <label>Subject Type:</label>
                    <select class="form-control" id="ddlAddSubjectTypesId" name="subjectsVM.SubjectTypeId" asp-items="@(new SelectList(ViewBag.ddlSubjectTypes, "Id","Name"))">
                        <option value="0">Select Subject Type</option>
                    </select>

                    <hr />
                    <button class="btn btn-success btn-md" id="btnSaveNewSubjects">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Subject</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" name="editSubjectsId" id="editSubjectsId">
                    <label>Subject Name</label>
                    <input type="text" name="editSubName" id="editSubName" required class="form-control">
                    <label>Class Name:</label>
                    <select class="form-control" id="ddlEditClassesId" required name="ddlEditClassesId" asp-items="@(new SelectList(ViewBag.ddlClasses, "Id","Name"))">
                        <option value="">Select Class</option>
                    </select>
                    <label>Subject Type Name:</label>
                    <select class="form-control" id="ddlEditSubjectTypesId" name="ddlEditSubjectTypesId" asp-items="@(new SelectList(ViewBag.ddlSubjectTypes, "Id","Name"))">
                        <option value="0">Select Subject Type</option>
                    </select>
                    <hr />
                    <button class="btn btn-success btn-md" formmethod="post"
                            asp-controller="Subjects"
                            asp-action="Edit"
                            asp-route-editSubjectsId="editSubjectsId"
                            asp-route-editSubName="editSubName"
                            asp-route-ddlEditClassesId="ddlEditClassesId"
                            asp-route-ddlEditSubjectTypesId="ddlEditSubjectTypesId">

                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Save
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <form enctype="multipart/form-data">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Subjects</h4>
                </div>
                <div class="modal-body">
                    <p><h3>Are you sure you want to delete this?</h3></p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="subjectsId" id="subjectsId">
                    <button class="btn btn-md btn-success" id="btnDeletesubId">
                        <span class="glyphicon glyphicon-ok" style="vertical-align:middle;margin-top: -5px"></span>
                        Yes
                    </button>
                    <button class="btn btn-danger btn-md " data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                        No
                    </button>                    
                </div>                
            </form>           
        </div>
    </div>
</div>

<div id="modalMessage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
            </div>
            <div class="modal-body">
                <p><h3 id="txtMessage" style="color:red"></h3></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-md " data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove" style="vertical-align:middle; margin-top: -5px"></span>
                    Ok
                </button>
            </div>

        </div>
    </div>
</div>
<!-- #endregion  "All Modals"-->
<!-- #region "All Scripts" -->

@section Scripts{

    <script type="text/javascript">
        //[NOTE: Tip]
        $('[data-toggle="popover"]').popover({
            trigger: 'focus'
        })
        $('tr td #btnEdit').on('click', function () {
            $("#editSubjectsId").val($(this).data("id"));
            $("#editSubName").val($(this).data("name"));
            $("#ddlEditClassesId").val($(this).data("classid"));
            $("#ddlEditSubjectTypesId").val($(this).data("subjecttypesid"));

        });
        
        $('#tblGetSubject tr td #btnDeleteSubject').on('click', function () {
            $("#subjectsId").val($(this).data("id"));
            });


        $("#btnDeletesubId").on('click', function (e) {
            e.preventDefault();
            var subjectsId = $('input#subjectsId').val();
            $.ajax({
                type: 'POST',
                data: { subjectsId: subjectsId },
                dataType: 'json',
                cache: false,
               url: '@Url.Action("DeleteSubjects", "Subjects", new { Area = "Institution" })',
                success:function (data) {
                        if (data.success == true) {
                            location.reload();
                        }
                        if (data.success == false) {
                            $('#txtMessage').text(data.message);
                            $('#modalMessage').modal('show');
                        }
                    },
                error: function (data) {

                },
                complete: function (data) {

                } 
             });
        });
        
        $("#btnSaveNewSubjects").on('click', function (e) {
            e.preventDefault();
             var formData = new FormData($("#addSubjects")[0]);
             $.ajax({
               type: 'POST',
               data: formData,
               contentType: false,
               processData: false,

               url: '@Url.Action("InsertSubjects", "Subjects", new { Area = "Institution" })',
                 success: function (response) {
                     location.reload();
                 },
                 error: function (response) {
                     alert('error: ' + response.message);
                 },
                 complete: function () {
                 }

                });
        });

    </script>
}

<!-- #endregion  "All Scripts"-->
