
@if (ViewBag.OeErrorMessage != null)
{
    @ViewBag.OeErrorMessage;
}
else
{
    @model OE.Web.Areas.Institution.Models.IndexSubjectListVM
    <ol class="breadcrumb pull-left" style="background-color:transparent">
        <li class="active">Courses Index</li>
    </ol>

    <div class="informationArea">
        <span class="label label-info "> Institution: @Model.InstitutionName </span>
    </div>

    <br />
    <br />
    <div class="row">
        <div class="col-12 col-sm-6 col-md-3 pull-right">
            <form asp-area="Institution" asp-controller="Attendances" asp-action="RespectedCoursesByStudent" method="get">
                <div class="input-group input-group-lg">
                    <span class="input-group"><label>Select Year:</label></span>
                    <input type="text" name="year" id="selectedYear" value="@Model.SelectedYear" class="form-control" onchange="this.form.submit();" required>
                </div>
                <br/>
                <div class="pull-right"><a class="btn btn-default hidden-print" asp-controller="AssignedStudents" asp-action="PrintSubjectList" asp-route-year="@Model.SelectedYear"><span class="glyphicon glyphicon-print" aria-hidden="true"></span> Print</a></div>
            </form>
        </div>
    </div>
    if (Model._AssignStudents.Count == 0)
    {
        <br />
        <div class="well"><b>You don't have any course for this year.....</b></div>
    }

    else
    {
        <label>Name: <b>@Model.StudentName</b></label>
         <h3>Assigned Courses</h3>

        <div class="table-responsive">
            <form enctype="multipart/form-data">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#SL</th>
                            <th>Classes</th>
                            <th>Courses</th>
                            <th>Sections</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var data in Model._AssignStudents)
                        {
                            <tr>
                                <td class="showDetails pointer">@i</td>
                                <td class="showDetails pointer">@data.ClassName</td>
                                <td class="showDetails pointer">@data.AssignedCourseName</td>
                                <td class="showDetails pointer">@data.AssignedSectionName</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </form>
        </div>
    }
    <!-- #endregion  "All Modals"-->

    <!-- #region "All Scripts" -->
    @section Scripts
        {
        <script type="text/javascript">
            $('#selectedYear').datepicker({
                format: "yyyy",
                viewMode: "years",
                minViewMode: "years",
                autoclose: true
            });
        </script>
    }
    <!-- #endregion  "All Scripts"-->

}